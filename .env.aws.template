# CloudWatch Logs
AWS_LOG_GROUP=nexacred-logs
AWS_LOG_STREAM=application

# SES (Email Service)
AWS_SES_REGION=us-east-1
FROM_EMAIL=noreply@nexacred.your-domain.com

